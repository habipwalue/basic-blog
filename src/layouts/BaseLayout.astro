---
// src/layouts/BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css'; // Stil dosyasını import et

  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet" />
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="tr">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-gray-100 font-sans antialiased flex flex-col min-h-screen">
        <Header />
		<main class="container mx-auto p-6 flex-grow bg-white shadow rounded my-6">
			<slot /> {/* Sayfa içeriği buraya gelecek */}
		</main>
        <Footer />
	</body>
</html>